<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jk39"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="700px"
            android:layout_height="700px"
            android:src="@drawable/id" />


    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="850px"
            android:layout_height="wrap_content">

            <TableRow
                android:background="@color/blue"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Name :"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/namet"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="400px"

                    />


            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <TableRow
                android:background="@color/blue"
                android:padding="5dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Username :"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/usernamet"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="400px" />


            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <TableRow
                android:background="@color/blue"
                android:padding="5dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Email :"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/emailt"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="400px" />


            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <TableRow
                android:background="@color/blue"
                android:padding="5dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Birthday :"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/birthdayt"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="400px" />


            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <TableRow
                android:background="@color/blue"
                android:padding="5dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Password :"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/passwordt"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="400px" />


            </TableRow>
        </TableLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/mdprofile"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@color/blue"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/modifyprofile"
            android:text="Modify Profile"
            android:textColor="@color/white" />

        <View
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/mdpic"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@color/blue"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/modifyimg"
            android:text="Modify Image"
            android:textColor="@color/white" />



    </LinearLayout>


</LinearLayout>





